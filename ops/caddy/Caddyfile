{$DOMAIN} {
  encode gzip

  @api path /api/* /metrics /health
  handle @api {
    reverse_proxy api:8000
  }

  handle /metrics {
    basicauth {
      admin {$ADMIN_HASH}
    }
    reverse_proxy api:8000
  }

  handle {
    root * /srv
    file_server
    try_files {path} {path}/ /index.html
  }

  tls {$EMAIL}
}

:80 {
  redir https://{$DOMAIN}{uri}
}
